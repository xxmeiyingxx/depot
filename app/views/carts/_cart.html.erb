<% unless cart.line_items.empty? %>
<div class="cart_title">カート</div>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">合計</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<p>
  <%= button_to("チェックアウト", new_order_path, method: :get) %>
  <%= button_to('カートを空にする', @cart, method: :delete, data:{confirm: '本当に良いですか？'}) %>
</p>
<% end %>
